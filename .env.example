# Configuration serveur
PORT=3000
NODE_ENV=production

# Secret JWT (IMPORTANT: utilisez une chaine longue et aleatoire)
# Generez-en un avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=votre_secret_jwt_tres_long_et_aleatoire

# Cle de chiffrement des donnees sensibles (emails, adresses, telephones)
# Generez-en une avec: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANT: Ne jamais changer cette cle apres le deploiement initial, sinon les donnees existantes seront illisibles
ENCRYPTION_KEY=votre_cle_de_chiffrement_32_caracteres_hex

# Compte administrateur
ADMIN_EMAIL=admin@votredomaine.com
ADMIN_PASSWORD=mot_de_passe_fort_123!

# Turso (SQLite cloud)
# Creez un compte sur https://turso.tech puis:
# turso db create alphamouv
# turso db show alphamouv --url
# turso db tokens create alphamouv
TURSO_DATABASE_URL=libsql://votre-base.turso.io
TURSO_AUTH_TOKEN=votre_token_turso

# URL du frontend (pour CORS)
FRONTEND_URL=https://votre-site.onrender.com

# Cloudinary (hebergement images)
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret
